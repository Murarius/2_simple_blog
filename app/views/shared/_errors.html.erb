<div class='errors'>
  <% if object.errors.any? -%>
  <h2>
    <%= "there is #{pluralize(object.errors.count, 'error')} on this form" %>
  </h2>
  <ul>
    <% object.errors.each do |key, value| -%>
      <li>
        <%= "#{ key } #{ value }" %>
      </li>
    <% end %>
  </ul>
  <% end -%>
</div>
