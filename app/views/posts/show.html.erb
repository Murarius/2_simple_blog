<div class='post'>
  <div class='post-date'>
    <p class='post-date-day'><%= @post.created_at.strftime('%d') %></p>
    <p class='post-date-month'><%= @post.created_at.strftime('%b') %></p>
    <p class='post-date-year'><%= @post.created_at.strftime('%Y') %></p>
  </div>
  <div class='post-title'>
    <%= @post.title %>
  </div>
  <div class='post-content'>
    <%= @post.content %>
  </div>
  <div class='post-content'>
    <%= @post.more_content %>
  </div>

  <%= link_to root_path, class: 'button' do %>
    <i class="fa fa-chevron-left"></i> Back to Posts
  <% end -%>
</div>
