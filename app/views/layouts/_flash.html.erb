<% flash.each do |key, value| %>
  <% if key == 'alert' -%>
    <%= content_tag(:div, class: "alert alert-#{key}") do%>
      <i class="fa fa-exclamation-triangle"></i><%= value %>
    <% end -%>
  <% else -%>
    <%= content_tag(:div, class: "alert alert-#{key}") do%>
      <i class="fa fa-check"></i><%= value %>
    <% end -%>
  <% end -%>
<%end%>
